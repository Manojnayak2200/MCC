                @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "w3-bar-item w3-button w3-padding-large w3-hide-small" })
                @Html.ActionLink("Booking", "BookingAdvance", "Home", null, new { @class = "w3-bar-item w3-button w3-padding-large w3-hide-small" })
                @Html.ActionLink("Students", "StudentList", "Home", null, new { @class = "w3-bar-item w3-button w3-padding-large w3-hide-small" })



                @*<a href="#band" class="w3-bar-item w3-button w3-padding-large w3-hide-small">BAND</a>
        <a href="#tour" class="w3-bar-item w3-button w3-padding-large w3-hide-small">TOUR</a>
        <a href="#contact" class="w3-bar-item w3-button w3-padding-large w3-hide-small">CONTACT</a>*@
                @*<div class="w3-dropdown-hover w3-hide-small">
            <button class="w3-padding-large w3-button" title="More">MORE <i class="fa fa-caret-down"></i></button>
            <div class="w3-dropdown-content w3-bar-block w3-card-4">
                @Html.ActionLink("Home", "Privacy", "Home", null, new { @class = "w3-bar-item w3-button" })
                <a href="#" class="w3-bar-item w3-button">Merchandise</a>
                <a href="#" class="w3-bar-item w3-button">Extras</a>
                <a href="#" class="w3-bar-item w3-button">Media</a>
            </div>
        </div>*@
                <a href="javascript:void(0)" class="w3-padding-large w3-hover-red w3-hide-small w3-right"><i class="fa fa-search"></i></a>

            </div>
        </div>

        <!-- Navbar on small screens (remove the onclick attribute if you want the navbar to always show on top of the content when clicking on the links) -->
        <div id="navDemo" class="w3-bar-block w3-hover-red w3-hide w3-hide-large w3-hide-medium w3-top" style="margin-top:46px;background-color:red;">
            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "w3-bar-item w3-button w3-padding-large" })

            @Html.ActionLink("About", "About", "Home", null, new { @class = "w3-bar-item w3-button w3-padding-large" })
            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "w3-bar-item w3-button w3-padding-large" })
            @Html.ActionLink("Booking", "BookingAdvance", "Home", null, new { @class = "w3-bar-item w3-button w3-padding-large" })
            @Html.ActionLink("Students", "StudentList", "Home", null, new { @class = "w3-bar-item w3-button w3-padding-large" })
            @*<a href="#tour" class="w3-bar-item w3-button w3-padding-large" onclick="myFunction()">TOUR</a>
        <a href="#contact" class="w3-bar-item w3-button w3-padding-large" onclick="myFunction()">CONTACT</a>
        <a href="#" class="w3-bar-item w3-button w3-padding-large" onclick="myFunction()">MERCH</a>*@
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="p-4">
                <div class="w3-content" style="width:100%;margin-top:46px">
                    @RenderBody()
                </div>
            </div>

        </main>
    </div>

    <!-- Footer -->
    <footer class="w3-container w3-padding-64 w3-center w3-opacity w3-light-grey w3-xlarge">
        <i class="fa fa-facebook-official w3-hover-opacity"></i>
        <i class="fa fa-instagram w3-hover-opacity"></i>
        @*<i class="fa fa-snapchat w3-hover-opacity"></i>
        <i class="fa fa-pinterest-p w3-hover-opacity"></i>*@
        <i class="fa fa-twitter w3-hover-opacity"></i>
        @Html.ActionLink("Login","login","Admin")
        <p class="w3-medium">Created by <a href="https://manojnayaknet.blogspot.com/p/about.html" target="_blank">MANOJ NAYAK</a></p>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>*@
    @await RenderSectionAsync("Scripts", required: false)


    <script>
       

        // Used to toggle the menu on small screens when clicking on the menu button
        function myFunction() {
            var x = document.getElementById("navDemo");
            if (x.className.indexOf("w3-show") == -1) {
                x.className += " w3-show";
            } else {
                x.className = x.className.replace(" w3-show", "");
            }
        }

        // When the user clicks anywhere outside of the modal, close it
        var modal = document.getElementById('ticketModal');
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
</body>
</html>
